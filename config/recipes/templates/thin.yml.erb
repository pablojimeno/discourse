# Thin configuration

chdir: <%= current_path %>
environment: production
address: 0.0.0.0
port: 3000
timeout: 30
log: <%= thin_log %>
pid: <%= thin_pid %>
socket: <%= shared_path %>/tmp/thin.sock
max_conns: 1024
max_persistent_conns: 100
require: []
wait: 30
servers: 4
daemonize: true
onebyone: true